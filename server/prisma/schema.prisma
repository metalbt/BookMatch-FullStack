// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  name        String
  email       String  @unique
  password    String
  image_url   String?
  back_url    String?
  description String?
  books Books[]
}

model Books {
  id              String   @id @default(uuid())
  title           String
  author          String
  publication_date String
  image_url       String
  url             String
  description     String?
  user  User @relation(fields: [userId], references: [id])
  userId String
}